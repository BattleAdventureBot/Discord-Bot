{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "noResolve": false,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES6"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
